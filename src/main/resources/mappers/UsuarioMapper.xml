<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistence.mybatisimpl.mappers.UsuarioMapper">
    <insert id="insertarUsuario" parameterType="map">
            INSERT INTO USUARIOS
            VALUES (
            #{usuario.correo}, 
            #{usuario.contrase単a},
            #{usuario.nombre},
            #{usuario.rol, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},
            #{usuario.estado, typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}
            )
    </insert>

    <select parameterType="map" id="consultarUsuario" resultMap="UsuarioResult" >
        SELECT    
        u.correo,
        u.contrase単a,
        u.nombre,
        u.rol,
        u.estado
        FROM USUARIOS AS u 
        WHERE u.correo=#{correo}
    </select>


    <resultMap type='Usuario' id='UsuarioResult'>
        <id property='correo' column='correo' />
        <result property='contrase単a' column='contrase単a' />
        <result property='nombre' column='nombre' />
        <result property='rol' column='rol' typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />
        <result property="estado" column="estado" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />


    </resultMap>
</mapper>